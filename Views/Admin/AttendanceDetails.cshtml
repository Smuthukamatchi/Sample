@using System.Linq
@model List<Sample.Data.Attendance>

@{
    ViewData["Title"] = "Attendance Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var employeeName = ViewData["EmployeeName"];
    
    var currentDate = DateTime.Now;
    var currentMonth = currentDate.Month-1;
    var currentYear = currentDate.Year;
    
    var filteredAttendance = Model.Where(a => a.AttendanceDate.Month == currentMonth && a.AttendanceDate.Year == currentYear);
    
    var attendanceCount = filteredAttendance.Count();
    
    ViewData["AttendanceCount"] = attendanceCount;
}

<div class="text-begin">
    <h2 class="display-7 text-warning ">Attendance Details</h2>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card bg-dark text-light">
                    <h2 class="text-center">Employee: @employeeName</h2>
                    <p class="text-center">Attendance Count: @ViewData["AttendanceCount"]</p>
                    <div class="text-end p-2">
                        <a class="btn btn-warning" asp-controller="Admin" asp-action="ViewAttendance">Back</a>
                    </div>
                <div class="card-body p-3" style="max-height: 300px; overflow-y: auto;">
                    <div class="table-responsive">
                        <table class="table table-dark table-striped">
                            <thead class="position-sticky top-0">
                                <tr>
                                    <th>Employee ID</th>
                                    <th>Attendance Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var attendance in Model.OrderByDescending(a => a.AttendanceDate))
                                {
                                    <tr>
                                        <td>@attendance.EmpId</td>
                                        <td>@attendance.AttendanceDate</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
