@model List<Sample.Data.Attendance>

@{
    ViewData["Title"] = "View Attendance";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="text-begin">
    <h2 class="display-7 text-warning">Employee's List</h2> 
</div>
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card bg-dark text-light">
                <div class="card-body p-3" style="max-height: 400px; overflow-y: auto;">
                    <div class="table-responsive">
                        <table class="table table-dark table-striped">
                            <thead class="position-sticky top-0">
                                <tr>
                                    <th>Employee ID</th>
                                    <th>Employee Name</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var employee in Model.GroupBy(a => new { a.EmpId, a.EmployeeName }).Select(g => g.First()))
                                {
                                    <tr>
                                        <td>@employee.EmpId</td>
                                        <td>@employee.EmployeeName</td>
                                        <td>
                                            <a class="btn btn-warning" asp-controller="Admin" asp-action="AttendanceDetails" asp-route-empId="@employee.EmpId">View Attendance</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
