@model List<Sample.Data.Employee>

@{
    ViewData["Title"] = "View Employee";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<head>
    <link rel="stylesheet" href="/css/employee.css" />
</head>
<div class="text-begin">
    <h2 class="display-7 text-warning">Employee's List</h2>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card bg-dark text-light">
                <div class="card-body p-3">
                   <div class="mb-3 text-center">
                        <form method="get" action="@Url.Action("ViewEmployee")">
                            <div class="row justify-content-center"> 
                                <div class="col-auto">
                                    <div class="input-group">
                                        <input type="text" name="searchDesignation" class="form-control rounded-pill bg-dark text-light" placeholder="Enter designation to search" style="width: 400px;" />
                                        <div class="p-2"></div>
                                        <button type="submit" class="btn btn-primary rounded fa fa-search">Find</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div style="max-height: 300px; overflow-y: auto;">
                        <table class="table table-dark table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Designation</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var employee in Model)
                                {
                                    <tr>
                                        <td>@employee.Name</td>
                                        <td>@employee.Designation</td>
                                        <td>
                                            <a class="btn btn-warning" asp-controller="Admin" asp-action="ViewEmployeeDetails" asp-route-id="@employee.EmpId">View</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@if (TempData["SearchError"] != null)
{
    <div class="alert alert-danger">@TempData["SearchError"]</div>
}
